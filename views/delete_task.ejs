    <form action="/delete/<%= task.id %>" method="post">
        <input type="submit" value="Yes" class="btn btn-danger" /> | 
        <input type="button" value="No" onclick="history.back()" class="btn btn-primary" />
    </form>
</div>
<div class="mb-3">
    <a href="/">Back to Index</a>
</div>

